@model IEnumerable<BookOrder.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text text-center">List Of books </h1>

<p class="text text-end">
    <a asp-action="Create"><button class="btn btn-primary"><i class="bi bi-plus-circle"></i>&nbsp; Create New </button></a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
               Informations
            </th>
            <th>
               Quantite
            </th>
            <th>
               Prix
            </th>
            <th>
                Category ID
            </th>
            <th>
               Author
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.info)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bookquantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cataid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.author)
            </td>
            <td >
                    <a asp-action="Edit" asp-route-id="@item.Id"><button class="btn btn-info btn-sm"><i class="bi bi-pencil"></i>&nbsp;Edit</button></a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><button class="btn btn-light btn-sm"> <i class="bi bi-info-square"></i>&nbsp;Details</button></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><button class="btn btn-danger btn-sm"><i class="bi bi-trash-fill"></i>&nbsp;Delete</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
